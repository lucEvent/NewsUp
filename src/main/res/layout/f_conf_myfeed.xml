<ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:background="@drawable/selector_settings"
            android:onClick="onConfigureSitesToShow"
            android:orientation="vertical"
            android:padding="20dip">

            <TextView
                android:id="@+id/conf_label_sites_title"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:gravity="left|center_vertical"
                android:paddingBottom="5dip"
                android:paddingLeft="15dip"
                android:text="Sites to show: 1 Site"
                android:textAppearance="?android:attr/textAppearanceMedium" />

            <TextView
                android:id="@+id/conf_label_sites_subtitle"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:paddingLeft="20dip"
                android:text="El Pais, El Confidencial,..."
                android:textAppearance="?android:attr/textAppearanceSmall" />

        </LinearLayout>

        <View
            android:layout_width="match_parent"
            android:layout_height="1dip"
            android:layout_marginLeft="10dip"
            android:layout_marginRight="10dip"
            android:background="@color/divider" />

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:background="@drawable/selector_settings"
            android:onClick="onConfigureSaveTime"
            android:orientation="vertical"
            android:padding="20dip">

            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:gravity="left|center_vertical"
                android:paddingBottom="5dip"
                android:paddingLeft="15dip"
                android:text="Prefetch and save news"
                android:textAppearance="?android:attr/textAppearanceMedium" />

            <TextView
                android:id="@+id/conf_label_save_time"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:paddingLeft="20dip"
                android:text="Never"
                android:textAppearance="?android:attr/textAppearanceSmall" />

        </LinearLayout>

    </LinearLayout>
</ScrollView>