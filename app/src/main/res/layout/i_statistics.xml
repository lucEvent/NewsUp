<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:background="@color/nv_background_dark"
    android:orientation="vertical"
    android:paddingBottom="8dp"
    android:paddingLeft="16dp"
    android:paddingRight="16dp"
    android:paddingTop="8dp">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_margin="2dp"
        android:orientation="horizontal">

        <ImageView
            android:id="@+id/icon"
            android:layout_width="20dp"
            android:layout_height="20dp"
            android:background="@mipmap/ic_launcher" />

        <com.lucevent.newsup.view.util.AppTextView
            android:id="@+id/name"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_gravity="center"
            android:layout_weight="1"
            android:paddingEnd="10dp"
            android:paddingStart="10dp"
            android:text="Site name"
            android:textColor="@color/nv_text_dark" />

        <com.lucevent.newsup.view.util.AppTextView
            android:id="@+id/version"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="version"
            android:textAlignment="textEnd"
            android:textColor="@color/nv_text_dark" />

    </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_margin="2dp"
        android:gravity="center_vertical"
        android:orientation="horizontal">

        <ImageView
            android:layout_width="15dp"
            android:layout_height="15dp"
            android:background="@drawable/ic_add_white" />

        <com.lucevent.newsup.view.util.AppTextView
            android:id="@+id/requests"
            android:layout_width="80dp"
            android:layout_height="wrap_content"
            android:paddingStart="5dp"
            android:text="5/100"
            android:textColor="@color/nv_text_dark" />

        <ImageView
            android:layout_width="15dp"
            android:layout_height="15dp"
            android:background="@drawable/ic_read_white" />

        <com.lucevent.newsup.view.util.AppTextView
            android:id="@+id/readings"
            android:layout_width="80dp"
            android:layout_height="wrap_content"
            android:paddingStart="5dp"
            android:text="45"
            android:textColor="@color/nv_text_dark" />

        <ImageView
            android:layout_width="15dp"
            android:layout_height="15dp"
            android:background="@drawable/ic_access_time" />

        <com.lucevent.newsup.view.util.AppTextView
            android:id="@+id/last"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:paddingStart="5dp"
            android:text="5 minutes ago"
            android:textAlignment="textEnd"
            android:textColor="@color/nv_text_dark" />

    </LinearLayout>

</LinearLayout>