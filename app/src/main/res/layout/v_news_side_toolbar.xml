<?xml version="1.0" encoding="utf-8"?>
<merge xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="wrap_content"
    android:layout_height="wrap_content">

    <android.support.design.widget.FloatingActionButton
        android:id="@+id/button_open_in_browser"
        style="@style/sideToolbarButton"
        android:src="@drawable/ic_open_in_browser"
        app:fabSize="mini"
        app:useCompatPadding="true" />

    <android.support.design.widget.FloatingActionButton
        android:id="@+id/button_font_size"
        style="@style/sideToolbarButton"
        android:src="@drawable/ic_font_size"
        app:fabSize="mini"
        app:useCompatPadding="true" />

    <android.support.design.widget.FloatingActionButton
        android:id="@+id/button_night"
        style="@style/sideToolbarButton"
        android:src="@drawable/ic_switch_color_mode"
        app:fabSize="mini"
        app:useCompatPadding="true" />

    <android.support.design.widget.FloatingActionButton
        android:id="@+id/button_share"
        style="@style/sideToolbarButton"
        android:src="@drawable/ic_share"
        app:fabSize="mini"
        app:useCompatPadding="true" />

    <android.support.design.widget.FloatingActionButton
        android:id="@+id/button_bookmark"
        style="@style/sideToolbarButton"
        android:src="@drawable/sel_btn_bookmark"
        app:fabSize="mini"
        app:useCompatPadding="true" />

    <android.support.design.widget.FloatingActionButton
        android:id="@+id/button_trigger"
        style="@style/sideToolbarButton"
        android:rotation="45"
        android:src="@drawable/ic_clear"
        app:fabSize="mini"
        app:useCompatPadding="true" />

</merge>