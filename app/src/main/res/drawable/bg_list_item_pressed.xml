<?xml version="1.0" encoding="utf-8"?>
<layer-list xmlns:android="http://schemas.android.com/apk/res/android">
    <item>
        <shape android:shape="rectangle">
            <gradient
                android:endColor="#666"
                android:gradientRadius="700"
                android:startColor="#fff"
                android:type="radial"/>
        </shape>
    </item>

    <item
        android:bottom="1dp"
        android:left="1dp"
        android:right="1dp"
        android:top="1dp">
        <shape android:shape="rectangle">
            <size
                android:width="1dp"
                android:height="1dp"/>
            <solid android:color="#ADDD"/>
        </shape>
    </item>

</layer-list>