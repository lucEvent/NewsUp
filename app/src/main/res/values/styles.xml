<resources xmlns:android="http://schemas.android.com/apk/res/android">

    <style name="AppBaseTheme" parent="android:Theme.Holo.Light">
        <item name="android:actionBarStyle">@style/actionBarStyle</item>
        <!--     <item name="android:typeface">serif</item>-->
    </style>

    <style name="AppTheme" parent="AppBaseTheme"></style>

    <style name="actionBarStyle" parent="@android:style/Widget.Holo.Light.ActionBar">
        <item name="android:background">@color/actionBar</item>
    </style>

    <style name="settings_layout_row">
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:background">@drawable/selector_settings</item>
        <item name="android:orientation">vertical</item>
        <item name="android:padding">20dip</item>
    </style>

    <style name="settings_row_title">
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:gravity">left|center_vertical</item>
        <item name="android:paddingBottom">5dip</item>
        <item name="android:paddingLeft">15dip</item>
        <item name="android:textAppearance">?android:attr/textAppearanceMedium</item>
    </style>

    <style name="settings_row_subtitle">
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:paddingLeft">20dip</item>
        <item name="android:textAppearance">?android:attr/textAppearanceSmall</item>
    </style>

    <style name="settings_divider">
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">1dip</item>
        <item name="android:layout_marginLeft">10dip</item>
        <item name="android:layout_marginRight">10dip</item>
        <item name="android:background">@color/divider</item>
    </style>


    <!-- **********************  Site Drawer ****************************** -->

    <style name="item_layout_main_drawer">
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:background">@drawable/selector_settings</item>
        <item name="android:paddingBottom">10dip</item>
        <item name="android:paddingRight">10dip</item>
        <item name="android:paddingLeft">40dip</item>
        <item name="android:paddingTop">10dip</item>
    </style>

    <style name="item_imageview_main_drawer">
        <item name="android:layout_width">30dp</item>
        <item name="android:layout_height">30dp</item>
        <item name="android:layout_centerVertical">true</item>
    </style>

    <style name="item_textview_main_drawer">
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:layout_centerVertical">true</item>
        <item name="android:paddingLeft">20dip</item>
        <item name="android:textAppearance">?android:attr/textAppearanceSmall</item>
    </style>

    <!-- **********************  NewsNotFound Dialog ****************************** -->

    <style name="button_newsnotfound">
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:background">@android:drawable/btn_default</item>
        <item name="android:paddingTop">12dip</item>
        <item name="android:paddingLeft">10dip</item>
        <item name="android:paddingRight">10dip</item>
        <item name="android:paddingBottom">17dip</item>
        <item name="android:layout_margin">4dip</item>
    </style>

    <!-- *********************** Floating buttons ************************************ -->
    <style name="button_floating">
        <item name="android:layout_width">60dp</item>
        <item name="android:layout_height">60dp</item>
        <item name="android:background">@drawable/selector_floating_button</item>
        <item name="android:padding">15dip</item>
        <item name="android:layout_margin">15dip</item>
        <item name="android:scaleType">centerCrop</item>
    </style>

    <!-- *********************** Site Configuration Dialog ************************************ -->
    <style name="elem_site_configuration">
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:background">@drawable/selector_settings</item>
        <item name="android:gravity">left|center_vertical</item>
        <item name="android:paddingBottom">25dip</item>
        <item name="android:paddingLeft">20dip</item>
        <item name="android:paddingTop">25dip</item>
        <item name="android:paddingRight">20dip</item>
    </style>

    <!-- *********************** Download Schedule Dialog ************************************ -->
    <style name="dl_toggle_button">
        <item name="android:layout_width">wrap_content</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:layout_weight">1</item>
        <item name="android:padding">0dip</item>
        <item name="android:layout_margin">0dip</item>
    </style>

</resources>