<?xml version="1.0" encoding="utf-8"?>
<web-app version="2.5" xmlns="http://java.sun.com/xml/ns/javaee">
    <servlet>
        <servlet-name>AppServlet</servlet-name>
        <servlet-class>com.lucevent.newsup.backend.AppServlet</servlet-class>
        <load-on-startup>1</load-on-startup>
    </servlet>
    <servlet-mapping>
        <servlet-name>AppServlet</servlet-name>
        <url-pattern>/app</url-pattern>
    </servlet-mapping>

    <servlet>
        <servlet-name>WebServlet</servlet-name>
        <servlet-class>com.lucevent.newsup.backend.WebServlet</servlet-class>
        <load-on-startup>1</load-on-startup>
    </servlet>
    <servlet-mapping>
        <servlet-name>WebServlet</servlet-name>
        <url-pattern>/web</url-pattern>
    </servlet-mapping>

    <servlet>
        <servlet-name>ManagerServlet</servlet-name>
        <servlet-class>com.lucevent.newsup.backend.ManagerServlet</servlet-class>
        <load-on-startup>1</load-on-startup>
    </servlet>
    <servlet-mapping>
        <servlet-name>ManagerServlet</servlet-name>
        <url-pattern>/manager</url-pattern>
    </servlet-mapping>

    <servlet>
        <servlet-name>DevelopmentServer</servlet-name>
        <servlet-class>com.lucevent.newsup.backend.DevelopmentServer</servlet-class>
        <load-on-startup>1</load-on-startup>
    </servlet>
    <servlet-mapping>
        <servlet-name>DevelopmentServer</servlet-name>
        <url-pattern>/dev</url-pattern>
    </servlet-mapping>

    <welcome-file-list>
        <welcome-file>index.html</welcome-file>
    </welcome-file-list>

    <servlet>
        <servlet-name>statistics</servlet-name>
        <jsp-file>stats.html</jsp-file>
    </servlet>
    <servlet-mapping>
        <servlet-name>statistics</servlet-name>
        <url-pattern>/stats</url-pattern>
    </servlet-mapping>

    <servlet>
        <servlet-name>messages</servlet-name>
        <jsp-file>/reports.html</jsp-file>
    </servlet>
    <servlet-mapping>
        <servlet-name>messages</servlet-name>
        <url-pattern>/reports</url-pattern>
    </servlet-mapping>

    <servlet>
        <servlet-name>load_distribution</servlet-name>
        <jsp-file>/load_distribution.html</jsp-file>
    </servlet>
    <servlet-mapping>
        <servlet-name>load_distribution</servlet-name>
        <url-pattern>/load</url-pattern>
    </servlet-mapping>

    <filter>
        <filter-name>ObjectifyFilter</filter-name>
        <filter-class>com.googlecode.objectify.ObjectifyFilter</filter-class>
    </filter>
    <filter-mapping>
        <filter-name>ObjectifyFilter</filter-name>
        <url-pattern>/*</url-pattern>
    </filter-mapping>

</web-app>